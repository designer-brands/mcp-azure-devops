{
    // Set the Python interpreter to the one in the uv virtual environment.
    // This enables IntelliSense, linting, and debugging.
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    // Add the 'src' directory to the path so that IntelliSense can find
    // your project's modules (e.g., 'mcp_azure_devops').
    "python.analysis.extraPaths": [
        "${workspaceFolder}/src"
    ],
    // Optional: Set ruff as the formatter and linter, since it's in your dev dependencies.
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        }
    },
    "ruff.path": [
        "${workspaceFolder}/.venv/bin/ruff"
    ]
}